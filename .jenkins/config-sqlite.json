{
	"database": {
		"engine": "knex-native",
		"knex": {
			"client": "sqlite3",
			"connection": {
				"filename": "/data/database.sqlite"
			},
			"pool": {
				"min": 0,
				"max": 1,
				"createTimeoutMillis": 3000,
				"acquireTimeoutMillis": 30000,
				"idleTimeoutMillis": 30000,
				"reapIntervalMillis": 1000,
				"createRetryIntervalMillis": 100,
				"propagateCreateError": false
			}
		}
	}
}
